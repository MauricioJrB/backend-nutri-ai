generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  @@map("users")
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  name        String
  provider    String
  idProvider  String?  @unique
  photoUrl    String? 
  password    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  macros Macro[]
}

model Macro {
  @@map("macros")
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  userId        String @db.ObjectId
  BMR           Float
  TDEE          Float
  totalKcal     Float
  proteinKcal   Float
  fatKcal       Float
  carbKcal      Float
  proteinGrams  Float
  fatGrams      Float
  carbGrams     Float
  amountWater   Float
  createdAt     DateTime @default(now())

  user        User @relation(fields: [userId], references: [id])
}