# Define o ambiente da aplicação (ex: local, production)
NODE_ENV=local

# URL base da API
API_URL=http://localhost

# Porta em que a API será executada
PORT=3001

# URL de conexão com o banco de dados MongoDB
# Substitua pelas credenciais corretas ao rodar em produção
DATABASE_URL=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/<DATABASE>?retryWrites=true&w=majority&appName=<APP_NAME>

# Chave da API do Gemini AI para geração de dietas
# Essa chave deve ser mantida em segredo e nunca compartilhada publicamente
API_GEMINI_KEY=your-api-gemini-key-here

# Chave secreta usada para assinar e verificar tokens JWT
# Use uma chave segura e forte em produção
JWT_SECRET=your-secure-jwt-secret-key-here

# Número de rounds para o algoritmo de hashing de senha (bcrypt)
# Valores maiores aumentam a segurança, mas também a carga computacional
SALT_ROUNDS=10

# Ativa ou desativa o uso de mocks na aplicação (ex: true para ativar, false para desativar)
ENABLE_MOCKS=true

# IDs de cliente para autenticação OAuth 2.0
# Estes IDs são usados para autenticação com o Google e devem ser configurados corretamente
CLIENT_ID=your-hash-client-id.apps.googleusercontent.com
ANDROID_CLIENT_ID=your-hash-android-client-id.apps.googleusercontent.com
WEB_CLIENT_ID=your-hash-web-client-id.apps.googleusercontent.com
